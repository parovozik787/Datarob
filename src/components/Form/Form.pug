form#contact-form.form(
  action="https://formspree.io/mzbgvaog",
  method="post",
  enctype="multipart/form-data"
)
  input#formName.form__input.form__name(
    ,
    placeholder="Full name",
    name="Full-name"
  )
  label(for="formName") Full name
  input#formNumber.form__input.form__number(
    type="number",
    placeholder="Phone number",
    name="Number"
  )
  label(for="formNumber") Phone number
  input#formEmail.form__input.form__email(
    type="email",
    required,
    placeholder="E-mail",
    name="E-mail"
  )
  label(for="formEmail") E-mail
  input#formCountry.form__input.form__country(
    placeholder="Country",
    name="Country"
  )
  label(for="formCountry") Country
  input#formCompany.form__input.form__company(
    placeholder="Company",
    name="Company"
  )
  label(for="formCompany") Company
  textarea#formTextarea.form__input.form__textarea.form__message(
    placeholder="Message",
    name="Textarea"
  )
  label(for="formTextarea") Message
  .form__attach-wrapper
    label.form__new-btn(for="upload")
      img(
        src="./../../components/Form/images/arrow-up-solid.svg",
        alt="upload-icon"
      )
    input#upload.form__attach(type="file", name="upload")
  input.form__submit.button(type="submit", value="SEND MESSAGE")
