{
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.html",
  "scripts": {
    "build": "yarn cache clean && rm -rf build && yarn build:parcel",
    "build:parcel": "parcel build src/pages/Home/Home.pug -d build --public-url ./ --out-file index.html",
    "csscomb": "csscomb src -c .csscomb.json",
    "lint:fix": "prettier --write",
    "start": "rm -rf dist && parcel src/pages/Home/Home.pug --port 3000 --open "
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss}": [
      "csscomb --tty-mode --"
    ],
    "*.{js,pug}": [
      "yarn lint:fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "autoprefixer": "^9.7.3",
    "parsel": "^0.3.0",
    "postcss-modules": "^1.4.1",
    "scrollreveal": "^4.0.5",
    "smooth-scroll": "^16.1.1",
    "tiny-slider": "^2.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@prettier/plugin-pug": "^1.2.0",
    "csscomb": "^4.3.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-plugin-sort-keys-fix": "^1.1.0",
    "husky": "^4.0.0",
    "lint-staged": "^10.1.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "pug": "^2.0.4",
    "sass": "^1.24.0",
    "sort-package-json": "^1.40.0"
  }
}
